<head>
  <meta charset="UTF-8" />
  <title>My One-Page Store</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
      background: #f8f8f8;
    }
    h1 {
      color: #333;
    }
    .section {
      margin-bottom: 40px;
    }
    .item {
      background: #fff;
      padding: 20px;
      margin: 10px 0;
      border-radius: 6px;
      box-shadow: 0 0 5px #ccc;
    }
    button {
      background: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      border-radius: 4px;
      margin: 5px 0;
    }
    button:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
  <h1>üõí My One-Page Shopping Store</h1>

  <div class="section">
    <h2>üõçÔ∏è Products</h2>
    <div id="products"></div>
  </div>

  <div class="section">
    <h2>üõí Cart</h2>
    <div id="cart"></div>
  </div>

  <div class="section">
    <h2>‚úÖ Checkout</h2>
    <div id="checkout"></div>
    <button onclick="makePayment()">Pay Now üí≥</button>
  </div>

  <script>
    const products = [
      { id: 1, name: "T-Shirt", price: 299 },
      { id: 2, name: "Cap", price: 149 },
      { id: 3, name: "Shoes", price: 799 }
    ];

    let cart = [];

    function displayProducts() {
      const container = document.getElementById("products");
      container.innerHTML = "";
      products.forEach(p => {
        const div = document.createElement("div");
        div.className = "item";
        div.innerHTML = `
          <h3>${p.name}</h3>
          <p>Price: ‚Çπ${p.price}</p>
          <button onclick="addToCart(${p.id})">Add to Cart</button>
        `;
        container.appendChild(div);
      });
    }

    function addToCart(id) {
      const product = products.find(p => p.id === id);
      cart.push(product);
      alert(`${product.name} added to cart!`);
      displayCart();
      displayCheckout();
    }

    function displayCart() {
      const container = document.getElementById("cart");
      container.innerHTML = "";
      if (cart.length === 0) {
        container.innerHTML = "<p>Your cart is empty.</p>";
        return;
      }
      let total = 0;
      cart.forEach((item, index) => {
        total += item.price;
        const div = document.createElement("div");
        div.className = "item";
        div.innerHTML = `
          <h3>${item.name}</h3>
          <p>Price: ‚Çπ${item.price}</p>
          <button onclick="removeItem(${index})">Remove</button>
        `;
        container.appendChild(div);
      });
      const totalDiv = document.createElement("div");
      totalDiv.innerHTML = `<h3>Total: ‚Çπ${total}</h3>`;
      container.appendChild(totalDiv);
    }

    function removeItem(index) {
      cart.splice(index, 1);
      displayCart();
      displayCheckout();
    }

    function displayCheckout() {
      const container = document.getElementById("checkout");
      if (cart.length === 0) {
        container.innerHTML = "<p>No items to checkout.</p>";
        return;
      }
      let total = 0;
      cart.forEach(item => {
        total += item.price;
      });
      container.innerHTML = `<h3>Total Payable: ‚Çπ${total}</h3>`;
    }

    function makePayment() {
      if (cart.length === 0) {
        alert("Cart is empty!");
        return;
      }
      alert("Redirecting to Razorpay (dummy)...");
      cart = [];
      displayCart();
      displayCheckout();
    }

    // Initialize on page load
    displayProducts();
    displayCart();
    displayCheckout();
  </script>
</body>
</html>
